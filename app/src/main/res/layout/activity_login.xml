    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="#0a9345"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/logo"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

    <TextView
        android:layout_margin="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#0a9345"
        android:textSize="15sp"
        android:text="Pata loans gives you quick access to un secured loans. All loans acrue interest rate of 3.5% and apporoved  with in 48 hrs.
you can receive your loan  through Mpesa, Airtel money and equitel"/>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#0a9345"
        android:textSize="15sp"
        android:text="1.Create your account."/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#0a9345"
        android:textSize="15sp"
        android:text="2.Choose your loan amount and click request loan."/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#0a9345"
        android:textSize="15sp"
        android:text="3.Wait for a confirmation message."/>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_button"
        android:hint="SIGN IN"
        android:textColorHint="@android:color/white" />

    <TextView
        android:id="@+id/term"
        android:layout_margin="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#0a9345"
        android:textSize="15sp"
        android:gravity="center"
        android:text=""/>

